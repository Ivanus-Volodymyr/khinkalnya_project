generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int         @id @default(autoincrement())
  email        String      @unique
  name         String
  age          Int?
  city         String?
  password     String
  phone        String?
  avatar       String?
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
  restaurantId Int?
  order        Order[]
  tokenPair    TokenPair?
  review       Review[]
}

model Restaurant {
  id     Int      @id @default(autoincrement())
  name   String
  user   User[]
  dish   Dish[]
  order  Order[]
  review Review[]
}

model Order {
  id           Int         @id @default(autoincrement())
  user         User?       @relation(fields: [userId], references: [id])
  userId       Int?        @unique
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
  restaurantId Int?
  dish         Dish[]
  createdAt    DateTime
}

model Dish {
  id            Int           @id @default(autoincrement())
  name          String
  price         Int
  weight        Int?
  description   String
  quantity_sold Int
  locality      Locality?     @relation(fields: [localityId], references: [id])
  localityId    Int?
  ingredients   Ingredients[]
  order         Order?        @relation(fields: [orderId], references: [id])
  orderId       Int?
  Restaurant    Restaurant?   @relation(fields: [restaurantId], references: [id])
  restaurantId  Int?
}

model Locality {
  id   Int    @id @default(autoincrement())
  name String
  dish Dish[]
}

model Ingredients {
  id     Int    @id @default(autoincrement())
  name   String
  dish   Dish?  @relation(fields: [dishId], references: [id])
  dishId Int?
}

model Review {
  id           Int         @id @default(autoincrement())
  body         String
  rating       Int?
  user         User?       @relation(fields: [userId], references: [id])
  userId       Int?        @unique
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
  restaurantId Int?
}

model TokenPair {
  id            Int    @id @default(autoincrement())
  access_token  String
  refresh_token String
  author        User?  @relation(fields: [authorId], references: [id])
  authorId      Int?   @unique
}

